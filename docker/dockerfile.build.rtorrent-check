ARG REPOSITORY
ARG TAG_APPEND


FROM "${REPOSITORY}/build/rtorrent-restage:${TAG_APPEND}" AS restage


FROM "${REPOSITORY}/stage:${TAG_APPEND}" AS stage

COPY --from=restage /deploy /deploy/
COPY data/rtorrent ./

RUN \
rsync ${RSYNC_ARGS} \
--include '*.ac' \
--include '*.am' \
--include '*.cc' \
--include '*.h' \
--include '*.in' \
--include '*.m4' \
--include '*.sh' \
--include '*/' \
--exclude '*' \
* /deploy


FROM "${REPOSITORY}/build/rtorrent-base:${TAG_APPEND}"

COPY --from=stage /deploy ./

RUN \
echo -e "\033[0;32mrebuilding container build.recompile-rtorrent\033[0m"; \
set -xe; \
\
make -j12 check; \
\
cp -rf * /deploy/
