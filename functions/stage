#!/usr/bin/env bash

include_header stage

rdo_stage() {
  local project_path
  project_path="$(get_project_path)"

  eval "$(args::init_subcommand "rdo stage" "Manage staging of environments.")"

  args::new_command "init" empty "Initialize new environment for staging" \
                    'rdo_stage_init'
  args::new_command "deploy" empty "Deploy environment" \
                    'rdo_stage_deploy'
  args::new_command "clean" empty "Remove environment" \
                    'rdo_stage_clean'

  args::new_command "network" default "Add network" \
                    'rdo_stage_network "${@}"'
  args::new_command "torrent" default "Create torrent" \
                    'rdo_stage_create_torrent "${@}"'

  args::new_command "dns" default "Add dns" \
                    'rdo_stage_dns "${@}"'
  args::new_command "router" default "Add router" \
                    'rdo_stage_router "${@}"'
  args::new_command "rtorrent" default "Add node" \
                    'rdo_stage_rtorrent "${@}"'
  args::new_command "tracker" default "Add tracker" \
                    'rdo_stage_tracker "${@}"'

  eval "$(args::process)"
}

rdo_stage_clean() {
  rdo_network_iptables_flush > /dev/null
  rdo_node_clean > /dev/null
  rdo_network_clean > /dev/null
  rm -rf ./run/current &> /dev/null
  rm -rf ./run/torrents/* &> /dev/null
  print_progress "stage cleaned"
}

rdo_stage_deploy() {
  print_progress "stage deploying"

  local deploy_type
  for deploy_type in trackers clients; do
    local node_list=()
    mapfile -t node_list < <(ls "./run/current/${deploy_type}/" 2> /dev/null || :)

    for node in "${node_list[@]}"; do
      if [[ "$(cat "./run/current/nodes/${node}/signal")" == "stage" ]]; then
        echo "deploy" > "./run/current/nodes/${node}/signal"
        echo "${deploy_type}/${node}"
      fi
    done
  done

  print_progress "stage deployed"
}

rdo_stage_init() {
  # TODO: Add state, don't allow calls when not in initialize.
  rdo_stage_clean
  mkdir -p "./run/current/"{networks,nodes}
  print_progress "stage initialized"
}

rdo_stage_network() {
  # eval "$(args::init_options_string "rdo stage network NAME" "name" "Stage a network")"

  # eval "$(args::process)"

  while true; do
    case "${1}" in
      --help|-h)
        echo "Usage: rdo stage network NAME COMMAND"
        echo
        echo "Stage a network"
        echo
        echo "Run 'rdo stage network NAME COMMAND --help' for more information on a command."
        exit 0
        ;;
      *)
        if [[ -n "${1}" ]] && [[ -z "${1##-*}" ]]; then
          print_error "${args__root}: unknown flag: ${1}"
          return 1
        fi

        break
        ;;
    esac
  done

  if (( ${#} > 1 )); then
    print_error "rdo stage network NAME: too many arguments"
    exit 1
  fi

  if (( ${#} == 0 )) || [[ -z "${1}" ]]; then
    print_error "rdo stage network NAME: missing or empty argument"
    exit 1
  fi

  local name="${1}"
  shift

  local self_path="./run/current/networks/${name}"
  mkdir -p "${self_path}"

  local args=(
    --label "project=rdo"
  )

  docker network create "${args[@]}" "${name}" > /dev/null

  local network_bridge
  network_bridge+=("$(rdo_network_bridge "${name}")")

  rdo_network_iptables "${default_iptables_args[@]}" -t filter -I DOCKER-USER -i "${network_bridge}" ! -o "${network_bridge}" -j DROP

  echo "$(rdo_network subnet "${name}")" > "${self_path}/subnet"
  echo "$(rdo_network address "${name}")" > "${self_path}/address"
  echo "$(rdo_network prefix "${name}")" > "${self_path}/prefix"

  echo "networks/${name}"
}

rdo_stage_torrent() {
  eval "$(args::init_options_string "rdo stage torrent NAME" "name" "Stage a torrent")"

  args::new_option "domain" req_string "" "Tracker domain name" \
                   'local domain=()' 'domain="${args__1}"'

  eval "$(args::process)"

  # local self_path="./run/current/to/${name}"
  # mkdir -p "${self_path}"

  rdo_torrent create --url "http://${domain}:6969/announce.php" "${name}"

  echo "torrents/${name}"
}

rdo_stage_dns() {
  local create_args=()

  eval "$(args::init_options_string "rdo stage dns NAME" "name" "Add dns to staging of environments.")"

  rdo_stage__container__default_args

  eval "$(args::process)"

  local self_type="dns"
  local image_name="phensley/docker-dns"

  create_args+=(
    --mount "type=bind,src=/var/run/docker.sock,dst=/docker.sock,bind-propagation=rshared"
  )

  rdo_stage__container__create
  rdo_stage__container__start
  rdo_stage__container__update_run

  echo "${self_type}/${name}"
}

rdo_stage_router() {
  local create_args=()

  eval "$(args::init_options_string "rdo stage router NAME" "name" "Add router to staging of environments.")"

  rdo_stage__container__default_args

  eval "$(args::process)"

  local self_type="routers"
  local image_name="rdo/run/router:global"

  create_args+=(--cap-add NET_ADMIN)

  rdo_stage__container__create
  rdo_stage__container__start
  rdo_stage__container__update_run

  echo "${self_type}/${name}"
}

rdo_stage_rtorrent() {
  #### TODO: add initializer to args options

  local create_args=()

  eval "$(args::init_options_string "rdo stage node NAME" "name" "Stage an rtorrent client.")"

  rdo_stage__container__default_args

  eval "$(args::process)"

  local self_type="clients"
  local image_name="rdo/run/rtorrent:default"

  local self_path="./run/current/nodes/${name}"
  mkdir -p "${self_path}/"{logs,session,torrents,watch}

  rdo_stage__container__create
  rdo_stage__container__start
  rdo_stage__container__update_run

  echo "${self_type}/${name}"
}

rdo_stage_tracker() {
  local create_args=()

  eval "$(args::init_options_string "rdo stage tracker NAME" "name" "Add tracker to staging of environments.")"

  rdo_stage__container__default_args

  eval "$(args::process)"

  local self_type="trackers"
  local image_name="rdo/run/opentracker:global"

  create_args+=(
    # --publish 6969:6969/udp
    # --publish 6969:6969
  )

  rdo_stage__container__create
  rdo_stage__container__start
  rdo_stage__container__update_run

  echo "${self_type}/${name}"
}

# Helper functions

rdo_stage__container__default_args() {
  args::new_option "dns-node" string "" "Set dns resolver to a dns node" \
                   'local dns_node=' 'dns_node="${args__1}"'
  args::new_option "network" string "n" "Connect tracker to network" \
                   'local networks=()' 'networks+=("${args__1}")'
  args::new_option "run-template" string "r" "Use template to create run script" \
                   'local run_template' 'run_template=("${args__1}")'
}

rdo_stage__container__create() {
  local self_path="./run/current/nodes/${name}"

  : "${run_template:?Missing run template argument.}"

  mkdir -p "./run/current/${self_type}" "${self_path}/interfaces"
  ln -s "./../nodes/${name}" "./run/current/${self_type}/${name}"

  echo "stage" > "${self_path}/signal"

  "./templates/run/${run_template}" > "${self_path}/run"
  chmod a+x "${self_path}/run"

  if [[ -f "./templates/rc/${run_template}" ]]; then
    "./templates/rc/${run_template}" > "${self_path}/rc"
  fi

  create_args+=(
    --name "${name}"
    --tty
    --network "none"
    --mount "type=bind,source=$(project_absolute_unix_path)/run/current/nodes/${name}/,target=/run/self/"
  )

  docker container create --label "project=rdo" "${create_args[@]}" "${image_name}" > /dev/null
}

rdo_stage__container__start() {
  docker network disconnect "none" "${name}"

  for network in "${networks[@]}"; do
    docker network connect "${network}" "${name}"
  done

  docker start "${name}" > /dev/null
}

rdo_stage__container__update_run() {
  local self_path="./run/current/nodes/${name}"

  rm -rf "${self_path}/interfaces"

  local line
  while IFS= read -r line; do
    if ! [[ "${line}" =~ ^network:([^ ]*)\ mac:([^ ]*)\ inet:([^ ]*)\ inet6:([^ ]*)$ ]]; then
      print_error "invalid output from 'rdo node network '${name}'"
      continue
    fi

    local network="${BASH_REMATCH[1]:?Missing network name.}"
    local interface_path="${self_path}/interfaces/${network}"
    mkdir -p "${interface_path}"

    [[ -z "${BASH_REMATCH[2]}" ]] || echo "${BASH_REMATCH[2]}" > "${interface_path}/mac"
    [[ -z "${BASH_REMATCH[3]}" ]] || echo "${BASH_REMATCH[3]}" > "${interface_path}/inet"
    [[ -z "${BASH_REMATCH[4]}" ]] || echo "${BASH_REMATCH[4]}" > "${interface_path}/inet6"

  done <<< "$(rdo_node_network "${name}")"
}
