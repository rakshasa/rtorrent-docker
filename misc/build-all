#!/bin/bash

set -xe

if ! [[ -f "./configure" ]]; then
  echo -e "\033[0;32mlibtorrent autogen.sh\033[0m"
  ./autogen.sh
fi

if ! [[ -f "./config.h" ]]; then
  echo -e "\033[0;32mlibtorrent configure\033[0m"
  . /env.configure
  ./configure --prefix=/prefix
fi

make
make install
make check TESTS=
make check
